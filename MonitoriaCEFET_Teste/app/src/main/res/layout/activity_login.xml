<?xml version="1.0" encoding="utf-8"?>


    <android.support.constraint.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fundoBackGround">


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="Necessita estar conectado com a internet"
            android:textColor="#ff3333"
            ads:layout_constraintHorizontal_bias="0.511"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="4dp"
            ads:layout_constraintTop_toBottomOf="@+id/senhaL" />

        <EditText
            android:id="@+id/emailL"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"

            android:layout_marginTop="16dp"

            android:ems="10"
            android:fontFamily="@string/titulo"
            android:hint="E-mail"


            android:inputType="textEmailAddress"
            android:singleLine="false"
            android:textColor="@color/titulo"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloL" />

        <TextView
            android:id="@+id/tituloL"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"


            android:fontFamily="@string/titulo"
            android:gravity="center"
            android:text="Login"


            android:textColor="@color/titulo"
            android:textSize="@dimen/titulo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            ads:layout_constraintHorizontal_bias="0.0" />


        <EditText
            android:id="@+id/senhaL"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"


            android:layout_marginTop="0dp"
            android:ems="10"
            android:fontFamily="@string/titulo"
            android:hint="Senha"

            android:inputType="textPassword"
            android:textColor="@color/titulo"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailL" />

        <Button
            android:id="@+id/buttonLoguinL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:background="@drawable/button_site"


            android:fontFamily="@string/titulo"
            android:text="Entrar"
            android:textColor="@color/titulo"
            android:textSize="@dimen/text"
            android:layout_marginTop="8dp"
            ads:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_marginLeft="100dp"
            ads:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="100dp"
            ads:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/irParaCadastroL"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"

        android:layout_marginTop="16dp"
        android:background="@color/fundoBackGround"
        android:fontFamily="@string/titulo"
        android:gravity="center"
        android:onClick="irParaCadastro"

        android:text="Ainda nÃ£o tem cadastro? Click aqui"

        android:textColor="@color/titulo"
        android:textColorHint="@color/titulo"
        android:textSize="@dimen/text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLoguinL" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            ads:adSize="LARGE_BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/irParaCadastroL"
            android:layout_marginTop="16dp"></com.google.android.gms.ads.AdView>


    </android.support.constraint.ConstraintLayout>
