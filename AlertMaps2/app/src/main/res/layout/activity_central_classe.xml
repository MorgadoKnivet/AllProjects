<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundoBackground"
    tools:context="morgado.mdsoftware.alertmaps.CentralClasse">

    <TextView
        android:id="@+id/voceChegou"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"


        android:layout_marginStart="8dp"


        android:layout_marginTop="0dp"
        android:fontFamily="@string/titulo"
        android:gravity="center"
        android:onClick="stop"
        android:text="Você chegou"
        android:textColor="@color/titulo"
        android:textSize="@dimen/aviso"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline11"
        app:layout_constraintVertical_bias="0.050000012" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:fontFamily="casual"
        android:text="Endereço:"
        android:textColor="@color/titulo"
        android:textSize="@dimen/descriçãoDoEditText"
        android:onClick="stop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline7"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvEstadoCentral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/text"
        android:onClick="stop"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCidadeCentral"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline10" />

    <TextView
        android:id="@+id/tvPaisCentral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:fontFamily="casual"
        android:maxLines="1"
        android:onClick="stop"
        android:text="TextView"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/text"
        app:layout_constraintLeft_toLeftOf="@+id/guideline10"
        app:layout_constraintTop_toBottomOf="@+id/tvEstadoCentral" />

    <TextView
        android:id="@+id/tvCidadeCentral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:maxLines="1"
        android:text="TextView"
        android:onClick="stop"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/text"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline10"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/tvBairroCentral" />

    <TextView
        android:id="@+id/tvEndereçoCentral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:onClick="stop"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/text"
        app:layout_constraintTop_toTopOf="@+id/guideline9"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline10" />

    <TextView
        android:id="@+id/tvBairroCentral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:onClick="stop"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/text"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/tvEndereçoCentral"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline10" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="80dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="País:"
        android:onClick="stop"
        android:textColor="@color/titulo"
        android:textSize="@dimen/descriçãoDoEditText"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Estado:"
        android:textColor="@color/titulo"
        android:textSize="@dimen/descriçãoDoEditText"
        android:layout_marginTop="0dp"
        android:onClick="stop"
        app:layout_constraintTop_toBottomOf="@+id/textView15"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Cidade:"
        android:textColor="@color/titulo"
        android:textSize="@dimen/descriçãoDoEditText"
        android:onClick="stop"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Bairro:"
        android:textColor="@color/titulo"
        android:textSize="@dimen/descriçãoDoEditText"
        android:onClick="stop"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/iconeGrandeTopo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="stop"
        app:layout_constraintBottom_toTopOf="@+id/guideline9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconesemfundo" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline11"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />
</android.support.constraint.ConstraintLayout>
