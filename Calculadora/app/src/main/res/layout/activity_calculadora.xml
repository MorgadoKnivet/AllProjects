<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundo"
    tools:context="com.example.moorg.calculadora.Calculadora"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/etProceso"
        android:cursorVisible="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="53dp"

        android:ellipsize="end"
        android:gravity="right"
        android:singleLine="true"
        android:textSize="28dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/buttonDiv"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="/"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button


        android:id="@+id/buttonResult"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="="
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/buttonLimpa"
        android:layout_width="136dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="278dp"
        android:background="@drawable/estado_button"
        android:text="Limpa"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/buttonSoma"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.2" />
    <Button
        android:id="@+id/buttonMult"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="181dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="x"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside" />
    <Button
        android:id="@+id/buttonSoma"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="93dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/button7"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="183dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etProceso" />

    <Button
        android:id="@+id/button8"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="183dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="8"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/button9"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="183dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="9"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside" />





    <Button
        android:id="@+id/button"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="0"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/button0"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="."
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/button4"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etProceso" />

    <Button
        android:id="@+id/button5"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="5"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/button6"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="6"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/buttonSub"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="-"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="-" />


    <Button
        android:id="@+id/button3"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="93dp"
        android:background="@drawable/estado_button"
        android:text="3"
        android:textColor="@color/textColor"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside" />


    <Button
        android:id="@+id/button1"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="93dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etProceso" />

    <Button
        android:id="@+id/button2"
        android:layout_width="63dp"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="93dp"
        android:background="@drawable/estado_button"
        android:textColor="@color/textColor"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/etProceso"
        app:layout_constraintVertical_chainStyle="spread_inside" />

</android.support.constraint.ConstraintLayout>
