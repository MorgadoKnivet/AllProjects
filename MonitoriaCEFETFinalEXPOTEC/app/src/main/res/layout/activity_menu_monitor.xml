        <Button
            android:id="@+id/irParaPerfil"
            android:layout_width="0dp"
            android:layout_height="52dp"

            android:layout_marginEnd="50dp"

            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_site"

            android:fontFamily="@string/titulo"
            android:text="Editar Perfil"
            android:textColor="@color/titulo"
            android:textColorHint="@color/titulo"
            android:textSize="@dimen/text"
            ads:layout_constraintHorizontal_bias="1.0"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent"
            ads:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/ProcurarMonitoria"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"

            android:background="@drawable/button_site"
            android:fontFamily="@string/titulo"
            android:text="Procurar Monitoria"
            android:textColor="@color/titulo"

            android:textColorHint="@color/titulo"
            android:textSize="@dimen/text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/atualizarMonitoria"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" />

        <Button
            android:id="@+id/feedback"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"

            android:layout_marginTop="30dp"
            android:background="@drawable/button_site"
            android:fontFamily="@string/titulo"
            android:onClick="irParaFeedBack"
            android:text="Problemas/SugestÃµes? "

            android:textColor="@color/titulo"
            android:textColorHint="@color/titulo"
            android:textSize="@dimen/text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/AvaliarMonitor"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp" />

        <Button
            android:id="@+id/AvaliarMonitor"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:layout_marginTop="30dp"
            android:background="@drawable/button_site"

            android:fontFamily="@string/titulo"

            android:text="Avaliar Monitor"
            android:textColor="@color/titulo"
            android:textColorHint="@color/titulo"
            android:textSize="@dimen/text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ProcurarMonitoria"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" />

        <Button
            android:id="@+id/CadastroMonitoria"
            android:layout_width="0dp"
            android:layout_height="52dp"

            android:background="@drawable/button_site"

            android:fontFamily="@string/titulo"
            android:text="Cadastrar monitoria"

            android:textColor="@color/titulo"
            android:textColorHint="@color/titulo"
            android:textSize="@dimen/text"

            android:layout_marginRight="50dp"
            ads:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="50dp"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="30dp"
            ads:layout_constraintTop_toBottomOf="@+id/irParaPerfil" />

        <Button
            android:id="@+id/atualizarMonitoria"
            android:layout_width="0dp"
            android:layout_height="52dp"

            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            android:layout_marginTop="30dp"
            android:background="@drawable/button_site"
            android:fontFamily="@string/titulo"
            android:onClick="irParaAtualizar"
            android:text="Atualizar monitoria"

            android:textColor="@color/titulo"
            android:textColorHint="@color/titulo"
            android:textSize="@dimen/text"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CadastroMonitoria"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp" />


    </android.support.constraint.ConstraintLayout>

