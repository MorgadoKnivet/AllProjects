<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundoBackGround"
    tools:context="morgado.mdsoftware.monitoriacefet.Universidade.AtualizarMonitoriaBuscaFaculdade">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"


        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"


        android:fontFamily="@string/titulo"
        android:gravity="center"
        android:text="Atualizar Monitoria"
        android:textColor="@color/titulo"
        android:textSize="@dimen/titulo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/materiaAtualizarBuscaFacul"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginEnd="8dp"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:fontFamily="@string/titulo"
        android:hint="MatÃ©ria"
        android:inputType="textPersonName"
        android:textColor="@color/titulo"
        android:textColorHint="@color/colorHint"
        android:textSize="@dimen/text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/butAtualizarFaculBusca"
        android:layout_width="0dp"
        android:layout_height="50dp"


        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_site"
        android:fontFamily="@string/titulo"
        android:gravity="center"
        android:text="Buscar"
        android:textColor="@color/titulo"
        android:textSize="@dimen/text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materiaAtualizarBuscaFacul" />
</android.support.constraint.ConstraintLayout>
