        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fundoBackGround"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="81dp">

            <TextView
                android:id="@+id/tituloL"

                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"


                android:fontFamily="@string/titulo"
                android:gravity="center"
                android:text="Inserir Dados "


                android:textColor="@color/titulo"
                android:textSize="@dimen/titulo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/Local"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"

                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"

                android:ems="10"
                android:fontFamily="@string/titulo"
                android:hint="Local"
                android:inputType="text|textAutoCorrect|textAutoComplete|textPersonName"
                android:textColor="@color/titulo"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Horario" />

            <EditText
                android:id="@+id/Horario"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"

                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"

                android:ems="10"
                android:fontFamily="@string/titulo"
                android:hint="horario"
                android:inputType="textPersonName"
                android:textColor="@color/titulo"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dias" />

            <EditText
                android:id="@+id/Monitor"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginEnd="8dp"

                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"


                android:ems="10"
                android:fontFamily="@string/titulo"
                android:hint="Nome do monitor"
                android:inputType="text|textAutoCorrect|textAutoComplete|textPersonName"
                android:textColor="@color/titulo"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tituloL" />

