                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"

                android:layout_marginTop="0dp"

                android:ems="10"
                android:fontFamily="@string/titulo"
                android:hint="Turno que acontece a monitora"
                android:inputType="text|textPersonName"
                android:textColor="@color/titulo"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ano" />

            <EditText
                android:id="@+id/Materia"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"

                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"

                android:layout_marginTop="0dp"
                android:ems="10"
                android:fontFamily="@string/titulo"
                android:hint="MatÃ©ria"
                android:inputType="text|textAutoCorrect|textAutoComplete|textPersonName"
                android:textColor="@color/titulo"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sobrenomeMonitor" />

            <EditText
                android:id="@+id/dias"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"

                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"

                android:ems="10"
                android:fontFamily="@string/titulo"
                android:hint="Dias da semana"
                android:inputType="textPersonName"
                android:textColor="@color/titulo"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="-11dp"
                app:layout_constraintTop_toBottomOf="@+id/TurnoP" />

            <Button
                android:id="@+id/Registrar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"

                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/button_site"
                android:fontFamily="@string/titulo"
                android:text="Registrar"
                android:textColor="@color/titulo"
                android:textColorHint="@color/colorHint"
                android:textSize="@dimen/text"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Local" />


            <TextView
                android:id="@+id/creditos"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="27dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:onClick="irParaCreditos"
                android:text="Desenvolvido por Guilherme Morgado"
                android:textColor="#0000ff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Registrar" />

        </android.support.constraint.ConstraintLayout>


    </ScrollView>


