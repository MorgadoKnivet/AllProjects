    <ListView
        android:id="@+id/listNovoMaterial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="24dp"

        android:layout_marginStart="8dp"


        android:layout_marginTop="4dp"


