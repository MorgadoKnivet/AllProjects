        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/edit_text_style_login_senha_sem_linha"
        android:ems="10"
        android:hint="0.00"
        android:inputType="textPersonName"
        android:textColor="@color/pretoPerrone"
        android:textColorHint="@color/pretoPerrone"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rsListaNovoMaterial"
        app:layout_constraintTop_toTopOf="@+id/rsListaNovoMaterial" />

    <TextView
        android:id="@+id/rsListaNovoMaterial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="R$"
        android:textColor="@color/verdePadrao"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/guideline36"
        app:layout_constraintTop_toBottomOf="@+id/textViewPreçoNovoMaterial" />


    <TextView
