<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fundoListaPersonalizada"
    android:paddingBottom="8dp"
    tools:context="workay.development.workayparceiros.Login.TelaInicial">

    <TextView
        android:id="@+id/textViewTituloTelaDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFeatureSettings=""
        android:gravity="center"
        android:text="Fique Atento!"

        android:textColor="#61bc6a"
        android:textSize="16sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewComentarioTelaDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Dependendo do seu plano ou operadora, você poderá ser cobrado pelo serviço de SMS."
        android:textColor="#61bc6a"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloTelaDialog" />

    <TextView
        android:id="@+id/buttonPositiveDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:height="10dp"
        android:background="@drawable/text_view_but_dialog_positive"
        android:gravity="center"
        android:onClick="dialogPositive"
        android:text="Prosseguir mesmo assim"
        android:textColor="#fff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewComentarioTelaDialog" />

    <TextView
        android:id="@+id/buttonNegativeDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:height="10dp"
        android:background="@drawable/text_view_but_dialog_negative"
        android:gravity="center"
        android:onClick="dialogNegative"
        android:text="Escolher outra forma de login"
        android:textColor="#61bc6a"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPositiveDialog" />

</android.support.constraint.ConstraintLayout>
